package Code_test;

import java.util.Scanner;

public class menu {
	
	int card = 0;
	Atm_main a = new Atm_main();
	
static	String menu[] = {"입금","출금","조회","통장 개설"};
	Scanner sc = new Scanner(System.in);
	
	void menu() {
		for (int i = 0; i < menu.length;i++) {
			System.out.println((i+1)+". "+menu[i]);
		}
		System.out.println();
		System.out.print("선택 : ");
		int cho = sc.nextInt();
		
		switch(cho) {
		case 1 : put_in();
		break;
		case 2 : put_out();
		break;
		case 3 : check();
			
		}
	}
	
	void put_in() {
		System.out.println("금액을 입력하세요.");
		System.out.print("입력 : ");
		int in = sc.nextInt();
		this.card += in;
		Atm_main.money -= in;
	}
	void put_out() {
		System.out.println("금액을 입력하세요.");
		System.out.print("입력 : ");
		int out = sc.nextInt();
		if(card<out) {
			System.out.println("출금할 수 없습니다.");
		}else {
			this.card -= out;
			Atm_main.money += out;
		}
	
	}
	void check() {
		System.out.println("현재 카드 잔액 : "+card);
		System.out.println("현재 소지금 : "+ a.money);
	}
	
}
