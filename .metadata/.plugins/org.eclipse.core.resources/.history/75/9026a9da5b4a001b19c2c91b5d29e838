package test;

import java.util.Scanner;

public class Coding_3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int sum = 0;
	
		Scanner sc = new Scanner(System.in);
		int num = sc.nextInt();
		
		for(int i = 0; i<=num; i++) {
			sum += i;
		}
		System.out.println(sum);
		

	}

}
