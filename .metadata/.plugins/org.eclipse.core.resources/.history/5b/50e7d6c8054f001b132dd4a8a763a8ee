package Chapter8;

import java.util.Scanner;

public class Book {

	String name;
	String number;
	String mail;
	boolean run = true;
	Book_array ba = new Book_array();

	void Book() {
		while (run) {

			System.out.println("1. 연락처 | 2. 검색 | 3. 추가");
			Scanner sc = new Scanner(System.in);
			int cho = sc.nextInt();
			switch (cho) {
			case 1:
				name();
				break;

			case 2:

			}
		}

	}

	void name() {
		for (int i = 0; i < ba.name.length; i++) {
			System.out.println((i + 1) + ". " + ba.name[i]);
		}
	}

}
