package Chapter7;

import java.util.Scanner;

public class User {

	String ID;
	String Name;
	int Pass;

	boolean run = true;

	void id_check(String id) {
		Scanner sc = new Scanner(System.in);
		
		while(run) {
			this.ID = id;
		if (id.length() > 6) {
			System.out.println("잘못 입력 하셨습니다.");
			System.out.print("입력 : ");
			ID = sc.next();
			run = true;
		}else {
			break;
		}
		}
	}

	void na_check(String na) {

		if (na.length() > 4) {
			System.out.println("잘못 입력 하셨습니다.");
		}
	}

	void pa_check(int pa) {

		if (pa > 99999999) {
			System.out.println("잘못 입력 하셨습니다.");
		}
	}
}
