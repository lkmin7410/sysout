package Chapter8;

import java.util.Scanner;

public class Book_array {

	Book b = new Book();
	String list[] = new String[5];
	Scanner sc = new Scanner(System.in);

	static int cnt = 0;

	Book_array() {

	}

	void add() {
		System.out.print("이름 : ");
		String name = sc.next();
		System.out.print("번호 : ");
		String num = sc.next();

		b.setName(name);
		b.setNumber(num);

		list[cnt] = b.getName();
		System.out.println(list[cnt]);
	}
}
